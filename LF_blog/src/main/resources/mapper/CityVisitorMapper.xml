<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzzz.blog.mapper.CityVisitorMapper">

    <select id="getCityVisitorLis" resultType="com.lzzz.blog.entity.CityVisitor">
        select * from tb_city_visitor order by uv desc
    </select>

    <insert id="saveCityVisitor" parameterType="com.lzzz.blog.entity.CityVisitor">
        insert into tb_city_visitor(city, uv)
        value (#{city}, #{uv})
        on duplicate key update
        uv=uv+#{uv}
    </insert>

</mapper>
